ffh2(size)
    $image-height = size+20px
    $image-top =(size/ 5px)+ ((size - 99px)/-20px)
    h2
        font-size size
        //margin-top 0
        margin-top (size/10px)+ ((size - 99px)/-10px)
    header
        height size+71px
        img
            height $image-height
            top $image-top
    hr
        height size * .12px + ((size - 99px)/-20px)
        margin 0
    hr.bottom
        top $image-height + $image-top

ffh3(size)
    $h2size = size*.36px//adjust from h2 to h3
    $h3size = $h2size*.6px
    if $h2size < 18px
        $h2size = 18px
    if $h3size < 16px
        $h3size = 16px
    h3, aside
        font-size $h2size
    h4, aside#issues
        font-size $h3size
    #the-facts
        h3
            font-size size
ffh3($h2xs)
@media (min-width: 520px)
    ffh3($h2sm)
@media (min-width: 768px)
    ffh3($h2md)
@media (min-width: 992px)
    ffh3($h2lg)
@media (min-width: 1200px)
    ffh3($h2lg)

