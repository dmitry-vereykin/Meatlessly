//ANIMATION
[data-animate=title-1],
[data-animate=title-2],
[data-animate=title-3] {
    display:none;
    position:absolute;
}
animate(x offset)
    [data-animate=title-1]
        left 240px * (x / 146) + offset
        .animated
            left:345px * (x / 146) + offset
    [data-animate=title-2]
        left 470px * (x / 146) + offset
        margin-top -10px
        padding-top 10px
        overflow:hidden;
        width 240px * (x / 146)
        .animated
            left 539px * (x / 146) + offset
    [data-animate=title-3]
        left 745px  * (x / 146) + offset
        .animated
            left 240px  * (x / 146) + offset

    [data-animate=title-1].animated
        left 345px * (x / 146) + offset
    [data-animate=title-2].animated
        left 539px * (x / 146) + offset
    [data-animate=title-3].animated
        left 240px  * (x / 146) + offset
    [data-animate=title-2].animated.final
        width 554px * (x / 146)

animate($h1xxs, 25)
@media (min-width: 520px)
